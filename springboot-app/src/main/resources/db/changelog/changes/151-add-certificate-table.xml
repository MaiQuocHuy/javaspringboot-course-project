    <!-- Create certificates table -->
    <changeSet id="151-01-create-certificates-table" author="ktc">
        <createTable tableName="certificates">
            <column name="certificate_id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="course_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="issued_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="certificate_code" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="file_url" type="VARCHAR(500)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        
        <!-- Add indexes for performance -->
        <createIndex tableName="certificates" indexName="idx_cert_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="certificates" indexName="idx_cert_course">
            <column name="course_id"/>
        </createIndex>
        <createIndex tableName="certificates" indexName="idx_cert_code">
            <column name="certificate_code"/>
        </createIndex>
        
        <!-- Add foreign key constraints -->
        <addForeignKeyConstraint baseTableName="certificates" baseColumnNames="user_id" 
                               referencedTableName="users" referencedColumnNames="id" 
                               onDelete="CASCADE" constraintName="fk_certificate_user"/>
        <addForeignKeyConstraint baseTableName="certificates" baseColumnNames="course_id" 
                               referencedTableName="courses" referencedColumnNames="id" 
                               onDelete="CASCADE" constraintName="fk_certificate_course"/>
    </changeSet>

