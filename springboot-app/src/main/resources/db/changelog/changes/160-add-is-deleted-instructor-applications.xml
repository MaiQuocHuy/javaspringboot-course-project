<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="160-add-is-deleted-instructor-applications" author="system">
    <preConditions onFail="MARK_RAN">
        <not>
            <columnExists tableName="instructor_applications" columnName="is_deleted"/>
        </not>
    </preConditions>

    <addColumn tableName="instructor_applications">
        <column name="is_deleted" type="BOOLEAN" defaultValueBoolean="false">
            <constraints nullable="false"/>
        </column>
    </addColumn>

    <rollback>
        <dropColumn tableName="instructor_applications" columnName="is_deleted"/>
    </rollback>
</changeSet>

</databaseChangeLog>