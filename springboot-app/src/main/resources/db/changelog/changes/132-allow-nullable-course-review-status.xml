<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="132-allow-nullable-course-review-status" author="ktc">
        <modifyDataType tableName="course_review_status" 
                        columnName="status" 
                        newDataType="ENUM('PENDING','APPROVED','DENIED','RESUBMITTED')"/>
        
        <dropNotNullConstraint tableName="course_review_status" 
                               columnName="status" 
                               columnDataType="ENUM('PENDING','APPROVED','DENIED','RESUBMITTED')"/>
    </changeSet>
</databaseChangeLog>
